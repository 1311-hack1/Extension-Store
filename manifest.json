{
  "manifest_version": 3,
  "name": "Extension Store",
  "version": "1.0",
  "description": "A custom extension store",
  "action": {
    "default_popup": "index.html",
    "default_title": "Extension Store"
  },
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.github.com/ https://raw.githubusercontent.com/"
  }
} 